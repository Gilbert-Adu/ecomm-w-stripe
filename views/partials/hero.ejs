                                    <option value="2199-2349">$2199 - $2349</option>
                                    <option value="2419-2599">$2419 - $2599</option>
                                    <option value="3300-4099">$3300 - $4099</option>
                                    <option value="4299-6000">$4299 - $6000</option>
                                    <option value="6529-7000">$6529 - $7000</option>
                                  </select>
                            </div>
                        
                        </div>
                        <div class="make-parent">
                            <label for="make" style="font-size: 12px; text-align: center;margin-left: 1vw;font-weight: bold;"></label><br>

                            <div class="search-button">
                                <input type="submit" value="Search">

                            </div>
                        
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</head>
<script src="https://cdn.jsdelivr.net/npm/gsap@3.12.5/dist/gsap.min.js"></script>
<script>
const heroText = document.getElementById('hero-text');
const heroForm = document.getElementById('hero-form');

document.addEventListener("DOMContentLoaded", (event) => {
  gsap.fromTo(".hero-text", 
        { 
            y: -100,
        },
        { 
            y: 0,
            duration: 1
    });
    gsap.fromTo(".hero-form", 
        { 
            y: -100,
        },
        { 
            y: 0,
            duration: 1
    });
    gsap.fromTo(".hero-image", 
        { 
            opacity: 0,
        },
        { 
            opacity: 1,
            duration: 1
    });
});


</script>