                height: 100%;
                width: 100%;
                border-radius: 10px;

            }
            .hero-image img{
                height: 100%;
                width: 100%;
                object-fit: cover;
                filter: grayscale(60%);
                border-radius: 10px;

            }
            .hero-utils {
                display: flex;
                flex-direction: column;
                justify-content: space-between;
            }
            .hero-utils {
                position: absolute;
                top: 10vh;
                left: 5vw;
                height: 60vh;
                width: 95vw;


            }
            .hero-text {
                text-align: center;
                font-family: "Space Grotesk", sans-serif;
                font-size: 80px;
                font-weight: bold;
                color: white;
                margin-top: 15vh;
                text-shadow: 2px 2px rgba(0,0,0,0.2);

            }
            .hero-text, .hero-form {
                width: 95vw;
            }
            .hero-form {
                border: 1px solid rgba(255, 131, 67, 0.5);
                border-radius: 10px;
                width: 70vw;
                height: 15vh;
                background-color: rgba(255, 131, 67, 0.5);
                color: white;
                font-family: "Poppins", sans-serif;
            }
            form {
                margin: 5vh 2vw;
                cursor: pointer;
            }
            .form-wrapper {
                display: flex;
                flex-direction: row;

            }
            .make, .furniture-type, .price, .search-button {
                margin-left: 1vw;
                width: 15vw;
                height: 5vh;
                text-align: center;
                border-radius: 5px;
                cursor: pointer;

            }
            select {
                width: 100%;
                height: 100%;
                border-radius: 5px;
                border: 1px solid rgba(255,255,255,0.5);
                background-color: transparent;
                color: white;
                cursor: pointer;

            }
            input[type=submit] {
                width: 100%;
                height: 100%;
                border-radius: 5px;
                background-color: white;
                color: rgba(255, 131, 67, 1);
                border: 1px solid white;
                font-weight: bold;
                cursor: pointer;
            }

            
        }
        /* tablet breakpoint */
        @media (min-width: 768px) and (max-width: 1023px) {}

        /* mobile breakpoint */
        @media (max-width: 767px) {
            .hero-container {
                height: 100vh;
                margin: 2vh 1vw;
                position: relative;
                overflow-x: hidden;
                overflow-y: hidden;

            }
            .hero-image {
                height: 100vh;
                width: 99%;
                border-radius: 10px;
                margin: 1vh 1vw;
                overflow-x: hidden;

            }
            .hero-image img{
                height: 100vh;
                width: 99%;
                object-fit: cover;
                filter: grayscale(70%);
                border-radius: 10px;

            }
            .hero-utils {
                display: flex;
                flex-direction: column;
                justify-content: space-between;
            }
            .hero-utils {
                position: absolute;
                top: 10vh;
                left: 5vw;
                height: 60vh;
                width: 95vw;


            }
            .hero-text {
                text-align: left;
                font-family: "Space Grotesk", sans-serif;
                font-size: 30px;
                font-weight: bold;
                color: white;
                margin-top: 15vh;
                padding-left: 3vw;
                text-shadow: 2px 2px rgba(0,0,0,0.2);

            }
            .hero-text, .hero-form {
                width: 95vw;
            }
            .hero-form {
                border: 1px solid rgba(255, 131, 67, 0.5);
                border-radius: 10px;
                width: 80vw;
                height: 60vh;
                background-color: rgba(255, 131, 67, 0.5);
                color: white;
                font-family: "Poppins", sans-serif;
                margin-top: 5vh;
                margin-right: 10vw;

            }
            form {
                margin: 5vh 2vw;
                cursor: pointer;

            }
            .form-wrapper {
                display: flex;
                flex-direction: column;

            }
            .make, .furniture-type, .price, .search-button {
                margin-left: 0;
                width: 100%;
                height: 5vh;
                text-align: left;
                border-radius: 5px;
                cursor: pointer;

            }
            select {
                width: 100%;
                height: 100%;
                border-radius: 5px;
                border: 1px solid rgba(255,255,255,0.5);
                background-color: transparent;
                color: white;
                cursor: pointer;

            }
            input[type=submit] {
                width: 100%;
                height: 100%;
                border-radius: 5px;
                background-color: white;
                color: rgba(255, 131, 67, 1);
                border: 1px solid white;
                font-weight: bold;
                cursor: pointer;
            }
            .make-parent{
                width: 100%;
            }

        }


