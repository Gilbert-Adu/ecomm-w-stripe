<head>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">

    <style>

        /* desktop breakpoint */
        @media (min-width: 1024px) {
            * {
                margin: 0 auto;
            }
    
            .navbar {
                display: flex;
                flex-direction: row;
                justify-content: space-between;
                align-items: center;
                height: 5vh;
                cursor: pointer;
            }
            .navbar-left {
                margin-left: 2vw;
            }
            .navbar-right {
                margin-right: 2vw;
                display: flex;
                flex-direction: row;
                align-items: center;
                font-family: "Poppins", sans-serif;
                font-size: 12px;
            }
            .navbar-right .link {
                margin-left: 1vw;
            }
            .logo-wrapper {
                height: 3vh;
                width: 10vw;
            }
            .logo-wrapper img{
                height: 3vh;
                width: 3vw;
                object-fit: cover;
            }
            .links {
                transition: color 0.3s ease-in-out;
            }
            .links:hover {
                color: rgba(255, 131, 67, 1);

            }
            .icons {
                display: none;
            }
            .mobile-options {
                display: none;
            }

            .log-in {
                border: 1px solid rgba(255, 131, 67, 1);
                padding: 0.5vh 1vw;
                border-radius: 5px;
                background-color: rgba(255, 131, 67, 1);
                color: white;
            }
            
        }
    
        /* tablet breakpoint */
        @media (min-width: 768px) and (max-width: 1023px) {}
    
        /* mobile breakpoint */
        @media (max-width: 767px) {
            * {
                margin: 0 auto;
            }
    
            .navbar {
                border: 1px solid #ddd;
                display: flex;
                flex-direction: row;
                justify-content: space-between;
                align-items: center;
                height: 5vh;
                cursor: pointer;
            }
            .navbar-left {
                margin-left: 2vw;
            }
            .navbar-right {
                margin-right: 2vw;
                display: flex;
                flex-direction: row;
                align-items: center;
                font-family: "Poppins", sans-serif;
                font-size: 12px;
            }
            .navbar-right .link {
                margin-left: 1vw;
            }
            .logo-wrapper {
                height: 3vh;
                width: 10vw;
            }
            .logo-wrapper img{
                height: 3vh;
                width: 10vw;
                object-fit: cover;
            }
            .link {
                visibility: hidden;
            }
            .close {
                font-size: 30px;
                color: rgba(255, 131, 67, 1);
                display: none;
                visibility: hidden;
            }
            .bars {
                font-size: 26px;
                color: rgba(255, 131, 67, 1);
                margin-right: 1vw;
            }
            .mobile-options-wrapper {
                height: 100vh;
                background-color: rgba(255, 255, 255, 1);
                display: none;

            }
            .mobile-options {
                display: flex;
                flex-direction: column;
                justify-content: space-around;
                font-family: "Poppins", sans-serif;
                font-size: 12px;
                display: none;
                z-index: 10;

            }
            .mobile-link {
                border-bottom: 1px solid #f1eeee;
                width: 100%;
                text-align: center;
                padding: 2vh 0;
            }
            .log-in {
                border: 1px solid rgba(255, 131, 67, 1);
                padding: 0.5vh 0;
                margin-top: 2vh;
                width: 20vw;
                border-radius: 5px;
                background-color: rgba(255, 131, 67, 1);
                color: white;
            }
            
        }
    
    </style>
    
</head>
<header>
    <nav class="navbar" id="navbar">
        <div class="navbar-left">
            <div class="logo-wrapper">
                <a href="/" style="text-decoration: none;">
                    <span style="font-family: Noto Sans KR;font-weight: bold;color: #7C00FE;width: 20vw;overflow: hidden;">고급 가구점</span>

                </a>

            </div>
        </div>
        <div class="navbar-right">
            <% for(let i = 0; i < links.length; i++) { %>
                <div class="link links"><%= links[i].name %></div>
            <% } %>
            <div class="link log-in">Log In</div>
            <div class="icons">
                <i class="fa fa-bars bars" id="bars"></i>
                <i class="fa fa-close close" id="close"></i>
            </div>
            

        </div>
    </nav>

    <div class="mobile-options-wrapper" id="options-wrapper">
        <div class="mobile-options" id="mobile-options">
            <% for(let i = 0; i < links.length; i++) { %>
                <div class="mobile-link links"><%= links[i].name %></div>
            <% } %>
            <div class="mobile-link log-in">Log in</div>
        </div>
    </div>
</header>
<script src="https://cdn.jsdelivr.net/npm/gsap@3.12.5/dist/gsap.min.js"></script>
<script>
const bars = document.getElementById('bars');
const closeButton = document.getElementById('close');

const optionsWrapper = document.getElementById('options-wrapper');
const mobileOptions = document.getElementById('mobile-options');

bars.addEventListener('click', () => {
    closeButton.style.display = 'block';
    closeButton.style.visibility = 'visible';

    bars.style.display = 'none';
    mobileOptions.style.display = 'block';
    optionsWrapper.style.display = 'block';

    gsap.fromTo(".mobile-options", 
        { 
            y: -100,
        },
        { 
            y: 0,
            duration: 1
    });
});

closeButton.addEventListener('click', () => {
    closeButton.style.display = 'none';
    bars.style.display = 'block';
    mobileOptions.style.display = 'none';
    optionsWrapper.style.display = 'none';

    gsap.fromTo(".mobile-options", 
        { 
            y: 0,
        },
        { 
            y: -100,
            duration: 1
    });


});

document.addEventListener("DOMContentLoaded", (event) => {
  gsap.fromTo(".navbar", 
        { 
            y: -100,
        },
        { 
            y: 0,
            duration: 1
    });
    
});
</script>